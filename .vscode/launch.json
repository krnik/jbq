{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Lib Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "--require",
                "ts-node/register",
                "${workspaceFolder}/test/main.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Perf Tests",
            "args": [
                "--require",
                "ts-node/register",
                "${workspaceFolder}/test/perf/benchmark.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Class Syntax",
            "args": [
                "--require",
                "ts-node/register",
                "${workspaceFolder}/src/class_syntax/class_syntax.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
