{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "space-before-function-paren": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true
        ],
        "object-literal-sort-keys": [
            false
        ],
        "arrow-parens": [
            true
        ],
        "curly": [
            true,
            "as-needed"
        ],
        "max-line-length": false,
        "no-bitwise": false,
        "comment-format": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "prefer-for-of": false,
        "interface-name": false
    },
    "rulesDirectory": []
}
